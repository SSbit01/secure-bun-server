{
  "name": "secure-bun-server",
  "description": "Template with authentication, KMS, and a MySQL database configured in Bun. Perfect for building performant and secure platform servers.",
  "version": "1.0.0",
  "author": "Stefan Samson <ss42701@outlook.com> (https://ssbit01.github.io/)",
  "type": "module",
  "private": true,
  "engines": {
    "bun": ">=1.3"
  },
  "main": "./src/index.js",
  "scripts": {
    "dev": "bun --hot ./src/index.js",
    "setup": "bun run --parallel \"setup:*\"",
    "setup:sql": "bun ./scripts/setup/sql.js",
    "test": "bun test --bail",
    "license": "generate-license-file",
    "build": "bun ./scripts/build.js",
    "compile": "bun ./scripts/compile.js",
    "start": "bun ./dist/index.js",
    "biome:check": "biome check",
    "biome:format": "biome format",
    "biome:format:write": "biome format --write"
  },
  "dependencies": {
    "canonical-email": "^1.0.0",
    "mailchecker": "^6.0.19"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "bun-types": "^1.3.9",
    "generate-license-file": "^4.1.1"
  }
}